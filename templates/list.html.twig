{% extends 'base.html.twig' %}

{% block title %}My Tasks{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2>My Tasks</h2>

    {% if tasks is empty %}
        <p>No tasks assigned to you.</p>
    {% else %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                {% for task in tasks %}
                    <tr>
                        <td>{{ task.name }}</td>
                        <td>{{ task.description }}</td>
                        <td>{{ task.status }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}